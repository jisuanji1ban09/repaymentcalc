<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RepaymentCalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="materialButtonStyle">@style/MyMaterialButton</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="checkboxStyle">@style/MyCheckBox</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_normal_shape</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sw_13sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


    <style name="MyMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_normal_shape</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sw_13sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MyEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_normal_shape</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textCursorDrawable">@drawable/edit_normal_cursor</item>
    </style>

    <style name="MyCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_button_selector</item>
        <item name="buttonCompat">?attr/listChoiceIndicatorMultipleAnimated</item>
        <item name="android:background">?attr/controlBackground</item>
    </style>


</resources>